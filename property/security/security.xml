<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.module.category" id="property_category">
            <field name="name">Real Estate</field>
        </record>
        <record id="property_group" model="res.groups">
            <field name="name">Property Manager</field>
            <field name="category_id" ref="property.property_category"/>
        </record>
        <record id="property_user_group" model="res.groups">
            <field name="name">Property User</field>
            <field name="category_id" ref="property.property_category"/>
        </record>
        <record model="ir.rule" id="property_record_rule_by_user">
            <field name="name">Property BY User</field>
            <field name="model_id" ref="property.model_property_property"/>
            <field name="domain_force">[('create_uid' , '=' ,user.id)]</field>
            <field name="perm_read">1</field>
            <field name="perm_write">1</field>
            <field name="perm_create">1</field>
            <field name="perm_unlink">1</field>

        </record>
    </data>
</odoo>