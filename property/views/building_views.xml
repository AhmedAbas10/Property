<odoo>
    <data>
        <record model="ir.ui.view" id="building_list_view">
            <field name="name">building list</field>
            <field name="model">building</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="no"/>
                    <field name="code"/>
                    <field name="description"/>

                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="building_form_view">
            <field name="name">building Form</field>
            <field name="model">building</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <field name="name"/>
                        </div>
                        <group>
                            <group>
                                <field name="no"/>
                                <field name="code"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="description"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="building_search_view">
            <field name="name">building Search</field>
            <field name="model">building</field>
            <field name="arch" type="xml">
                <search>
                    <field name="no"/>
                    <field name="code"/>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="building_action">
            <field name="name">building</field>
            <field name="res_model">building</field>
        </record>
        <menuitem id="building_menu_item"
                  name="buildings"
                  parent="property.properties_menu"
                  action="building_action"/>
    </data>
</odoo>
