<odoo>
    <data>
        <record model="ir.ui.view" id="owner_list_view">
            <field name="name">owner list</field>
            <field name="model">owner</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="phone"/>
                    <field name="address"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="owner_form_view">
            <field name="name">owner Form</field>
            <field name="model">owner</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <field name="name"/>
                        </div>
                        <br/>
                        <br/>
                        <group>
                            <field name="phone"/>
                            <field name="address"/>
                            <field name="property_ids" widget="many2many_tags">
                                <tree string="projects" editable="bottom">
                                    <field name="name"/>
                                    <field name="selling_price"/>
                                    <field name="postcode"/>
                                    <field name="date_availability"/>
                                </tree>

                            </field>

                        </group>
                    </sheet>

                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="owner_search_view">
            <field name="name">owner Search</field>
            <field name="model">owner</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="phone"/>
                    <field name="address"/>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="owner_action">
            <field name="name">Owner</field>
            <field name="res_model">owner</field>
        </record>
        <menuitem id="owner_menu_item"
                  name="Owner"
                  parent="property.configuration_menu"
                  action="owner_action"/>
    </data>
</odoo>
